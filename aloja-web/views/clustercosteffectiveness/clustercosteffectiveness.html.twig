{% extends "layout.html.twig" %}
{% block javascript %}
	{{ parent() }}
	<script type="text/javascript" src="js/highcharts/js/highcharts.js"></script>
	<script type="text/javascript" src="js/highcharts/js/highcharts-more.js"></script>
	<script>
        $(document).ready(function() {
                   $("#chart").highcharts({
                        chart: {
                            type: 'bubble',
                            zoomType: 'xy'
                        },
                        colors: ['#7cb5ec', '#434348', '#90ed7d', '#f7a35c', '#8085e9', 
                                 '#f15c80', '#e4d354', '#2b908f', '#f45b5b', '#91e8e1',
                                 '#4572A7', '#AA4643', '#89A54E', '#80699B', '#3D96AE', 
                                 '#DB843D', '#92A8CD', '#A47D7C', '#B5CA92',
                                 '#2f7ed8', '#0d233a', '#8bbc21', '#910000', '#1aadce', 
                                 '#492970', '#f28f43', '#77a1e5', '#c42525', '#a6c96a'],
                        credits: {
                            enabled: false
                        },
                        xAxis: {
                        	title: {
                                text: 'Execution time (s)'
                            },
                        },
                        yAxis: {
                        	title: {
                                text: 'Total execution cost (US $)'
                            },
                            min: 0
                        },
                        plotOptions: {
                          series: {
                            cursor: 'pointer',
                            point: {
                               events: {
                                   click: function () {
                                     var id = this.series.name;
				      				 top.location.href="{{ path('clusters') }}?cluster_name="+id;
                                   }
                               }
                            }
                          },
                          bubble: {
                              tooltip: {
                                  headerFormat: '<b>{series.name}</b><br>',
                                  pointFormat: '{point.x} s, {point.y} US$, {point.z}  rating<br />{series.options.clusterdesc}'

                              }
                          }
                        },
                        title: {
                            text: 'Cost-effectiveness of clusters'
                        },
                        series: {{ series | raw }}
                    });
    });

    </script>
    {% endblock %}
    {% block content %}
        <div id="navigation">
        	<div style="width: 50%; float: left; margin: 0 auto; margin-left: 10%; ">
	               <div id="chart"></div>
	               <h3>Top 10 best clusters</h3>
	               <table class="table table-striped">
	                 <thead>
	                 	<th>Cluster</th>
	                 	<th>Best execution cost</th>
	                 	<th>Best execution time</th>
	                 	<th>VM RAM</th>
	              		<th>Datanodes</th>
	              		<th>VM OS</th>
	                 	<th>Provider</th>
	              		<th>Type</th>
	                 </thead>
	                 <tbody>
	                  {% for exec in bestExecs %}
	                    {% if loop.index <= 10 %}
	                    <tr>
	                       <td>{{ exec.name }}</td>
	                       <td>{{ exec.cost_std  | number_format(2, '.', ',')  }} US$</td>
	                       <td>{{ exec.exe_time | number_format(0, '.', ',') }} s</td>
	                       <td>{{ exec.vm_RAM | number_format(0, '.', ',') }} GB</td>
	                       <td>{{ exec.datanodes }}</td>
	                       <td>{{ exec.vm_OS }}</td>
	                       <td>{{ exec.provider }}</td>
	                       <td>{{ exec.type }}</td>
	                    </tr>
	                    {% endif %}
	                  {% endfor %}
	                 </tbody>
	               </table>
	        </div>
            <div id="chart" style=""></div>
            <div style="width: 30%; float: right;">
                {% include 'common/config_filters.html.twig' %}
            </div>
        </div>
    {% endblock %}
