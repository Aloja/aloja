<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>

<property>
  <name>mapreduce.framework.name</name>
  <value>yarn</value>
</property>

<property>
 <name>mapreduce.jobhistory.address</name>
 <value>##MASTER##:##PORT_PREFIX##0020</value>
</property>
<property>
 <name>mapreduce.jobhistory.webapp.address</name>
 <value>##MASTER##:##PORT_PREFIX##9888</value>
</property>
<property>
    <name>mapreduce.jobhistory.admin.address</name>
    <value>##MASTER##:##PORT_PREFIX##0033</value>
</property>

<property>
    <name>mapreduce.jobtracker.jobhistory.location</name>
    <value>##LOG_DIR##</value>
</property>


<property>
    <name>mapreduce.jobhistory.intermediate-done-dir</name>
    <value>##LOG_DIR##/history/done_intermediate</value>
</property>
<property>
    <name>mapreduce.jobhistory.done-dir</name>
    <value>##LOG_DIR##/history/done</value>
</property>

<property>
 <name>mapreduce.jobtracker.address</name>
 <value>##MASTER##:##PORT_PREFIX##8021</value>
</property>

<property>
 <name>mapreduce.jobtracker.http.address</name>
 <value>##MASTER##:##PORT_PREFIX##0030</value>
</property>

<property>
  <name>mapreduce.tasktracker.map.tasks.maximum</name>
  <value>##MAX_MAPS##</value>
  <description>The maximum number of map tasks that will be run
  simultaneously by a task tracker.
  </description>
</property>
<property>
  <name>mapreduce.tasktracker.reduce.tasks.maximum</name>
  <value>##MAX_REDS##</value>
  <description>The maximum number of reduce tasks that will be run
  simultaneously by a task tracker.
  </description>
</property>

<property>
    <name>mapreduce.job.maps</name>
    <value>##MAX_MAPS##</value>
</property>
<property>
    <name>mapreduce.job.reduces</name>
    <value>##MAX_REDS##</value>
</property>

<property>
    <name>yarn.app.mapreduce.am.resource.mb</name>
    <value>##AM_MB##</value>
</property>


<property>
  <name>dfs.datanode.hostname</name>
  <value>##HOST##</value>
</property>
<property>
  <name>mapreduce.tasktracker.host.name</name>
  <value>##HOST##</value>
</property>

<property>
  <name>mapreduce.tasktracker.http.address</name>
  <value>##HOST##:##PORT_PREFIX##0060</value>
</property>

<!-- For infiniBand -->
<property>
  <name>mapreduce.tasktracker.dns.interface</name>
  <value>##IFACE##</value>
</property>

<property>
  <name>mapreduce.task.io.sort.factor</name>
  <value>##IO_FACTOR##</value>
</property>

<property>
  <name>mapreduce.task.io.sort.mb</name>
  <value>##IO_MB##</value>
</property>

<!-- For BigBench -->

<property>
  <name>mapreduce.map.java.opts</name>
  <value>-Xmx3076M -Xms1024M</value>
</property>

<property>
  <name>mapreduce.reduce.java.opts</name>
  <value>-Xmx3076M -Xms1024M</value>
</property>

 <property>
   <name>mapreduce.map.memory.mb</name>
   <value>3076</value>
 </property>

 <property>
   <name>mapreduce.reduce.memory.mb</name>
   <value>3076</value>
 </property>
