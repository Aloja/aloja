user www-data;
# adjust to the number of cores
worker_processes 4;
#pid /var/run/nginx.pid;
worker_rlimit_nofile 100480;

error_log  /var/log/nginx/error.log;
pid        /var/run/nginx.pid;

events {
    # number of connections per worker
    worker_connections  32768;
    multi_accept on;
    # use epoll on linux 2.6
    use epoll;
}

http {
    include       /etc/nginx/mime.types;

    access_log  /var/log/nginx/access.log;
    #access_log off;

    server_tokens off;
    sendfile        on;
    tcp_nopush     on;
    tcp_nodelay        on;
    keepalive_timeout  60;

    # enable compression
    gzip  on;
    gzip_disable "MSIE [1-6]\.(?!.*SV1)";

    fastcgi_cache_path /etc/nginx/cache levels=1:2 keys_zone=aloja:500m;
    fastcgi_cache_key "$host$request_uri";

#    proxy_ignore_headers "Set-Cookie";
#    proxy_cache_path /etc/nginx/cache keys_zone=one:10m loader_threshold=300 loader_files=200;
#    proxy_cache_key "$host$request_uri";

#    proxy_cache_min_uses 100;
#    proxy_cache_methods GET HEAD POST;
#    proxy_cache_valid 404 10m;

    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}
